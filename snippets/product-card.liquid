<div class="w-full h-full py-6 px-3">
   <div class="border-2 border-gray-800 bg-white shadow-lg rounded-lg overflow-hidden">
       <a href="{{ product_product.url }}">
           {% if product_product.featured_image %}
               <div class="h-full overflow-hidden p-4">
                   <img class="w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform" loading="lazy" width="w-full" height="h-full" src="{{ product_product.featured_image | img_url: 'medium' }}" alt="{{ product_product.featured_image.alt }}">
               </div>
               
           {% else %}
               {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
           {% endif %}
       </a>
       
       <div class="flex flex-col p-4">
           <span class="text-sm text-gray-400">{{ product_product.vendor }}</span>

           <a href="{{ product_product.url }}" class="text-gray-800 uppercase font-medium">{{ product_product.title }}</a>

           <p class="text-gray-500">{{ product_product.price | money }}</p>
       </div>
       
   </div>
</div>